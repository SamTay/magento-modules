<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Cron:etc/crontab.xsd">
    <group id="amqp">
        <job name="consumerProductCreatedBatchListener" instance="BlueAcorn\AmqpBase\Model\ConsumerRunner" method="productCreatedBatchListener">
            <schedule>0 * * * *</schedule>
        </job>
        <job name="consumerProductUpdatedBatchListener" instance="BlueAcorn\AmqpBase\Model\ConsumerRunner" method="productUpdatedBatchListener">
            <schedule>0 * * * *</schedule>
        </job>
    </group>
</config>
