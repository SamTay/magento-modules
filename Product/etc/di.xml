<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <preference for="BlueAcorn\AmqpProduct\Api\ImportInterface" type="BlueAcorn\AmqpProduct\Model\Import" />
    <!-- virtual types for mappers -->
    <virtualType name="Virtual\OptionTable\Dynamic\Product" type="BlueAcorn\EntityMap\Mapper\OptionTable\Dynamic">
        <arguments>
            <argument name="entityType" xsi:type="string">catalog_product</argument>
        </arguments>
    </virtualType>
    <virtualType name="Virtual\OptionTable\Strict\Product" type="BlueAcorn\EntityMap\Mapper\OptionTable\Strict">
        <arguments>
            <argument name="entityType" xsi:type="string">catalog_product</argument>
        </arguments>
    </virtualType>
    <type name="BlueAcorn\EntityMap\MapperFactory">
        <arguments>
            <argument name="pool" xsi:type="array">
                <item name="Virtual\OptionTable\Dynamic\Product" xsi:type="object">Virtual\OptionTable\Dynamic\Product</item>
                <item name="Virtual\OptionTable\Strict\Product" xsi:type="object">Virtual\OptionTable\Strict\Product</item>
            </argument>
        </arguments>
    </type>
    <!-- Utilizing core module for custom logger -->
    <virtualType name="BlueAcornAmqpProductLogger" type="BlueAcorn\Core\Model\Logger">
        <arguments>
            <argument name="name" xsi:type="string">BlueAcorn Amqp Product Logger</argument>
            <argument name="handlers" xsi:type="array">
                <item name="base" xsi:type="object">BlueAcornAmqpProductLoggerHandler</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="BlueAcornAmqpProductLoggerHandler" type="BlueAcorn\Core\Model\Logger\Handler\Base">
        <arguments>
            <argument name="fileName" xsi:type="string">/var/log/amqp/product.log</argument>
        </arguments>
    </virtualType>
    <type name="BlueAcorn\AmqpBase\Helper\LogManager">
        <arguments>
            <argument name="loggers" xsi:type="array">
                <item name="product" xsi:type="object">BlueAcornAmqpProductLogger</item>
            </argument>
        </arguments>
    </type>
</config>

