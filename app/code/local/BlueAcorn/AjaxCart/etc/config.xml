<?xml version="1.0"?>
<config>
    <modules>
        <BlueAcorn_AjaxCart>
            <version>0.0.1</version>
        </BlueAcorn_AjaxCart>
    </modules>
    <global>
        <blocks>
            <blueacorn_ajaxcart>
                <class>BlueAcorn_AjaxCart_Block</class>
            </blueacorn_ajaxcart>
        </blocks>
        <helpers>
            <blueacorn_ajaxcart>
                <class>BlueAcorn_AjaxCart_Helper</class>
            </blueacorn_ajaxcart>
        </helpers>
    </global>
    <frontend>
        <layout>
            <updates>
                <blueacorn_ajaxcart>
                    <file>blueacorn/ajaxcart.xml</file>
                </blueacorn_ajaxcart>
            </updates>
        </layout>
        <routers>
            <checkout>
                <args>
                    <modules>
                        <blueacorn_ajaxcart before="Mage_Checkout">BlueAcorn_AjaxCart</blueacorn_ajaxcart>
                    </modules>
                </args>
            </checkout>
        </routers>
    </frontend>
    <default>
        <checkout>
            <cart>
                <redirect_to_cart>0</redirect_to_cart>
            </cart>
        </checkout>
    </default>
</config>