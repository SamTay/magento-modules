<config>
    <modules>
        <BlueAcorn_AttributeFlag>
            <version>0.1.0</version>
        </BlueAcorn_AttributeFlag>
    </modules>
    <global>
        <models>
            <ba_attributeflag>
                <class>BlueAcorn_AttributeFlag_Model</class>
                <resourceModel>ba_attributeflag_resource</resourceModel>
            </ba_attributeflag>
            <ba_attributeflag_resource>
                <class>BlueAcorn_AttributeFlag_Model_Resource</class>
            </ba_attributeflag_resource>
        </models>
        <blocks>
            <ba_attributeflag>
                <class>BlueAcorn_AttributeFlag_Block</class>
            </ba_attributeflag>
        </blocks>
        <helpers>
            <ba_attributeflag>
                <class>BlueAcorn_AttributeFlag_Helper</class>
            </ba_attributeflag>
        </helpers>
        <resources>
            <ba_attributeflag_setup>
                <setup>
                    <module>BlueAcorn_AttributeFlag</module>
                </setup>
            </ba_attributeflag_setup>
        </resources>
        <ba_attributeflags>
            <sale>
                <label>Sale</label>
                <model>ba_attributeflag/flag_sale</model>
            </sale>
            <new>
                <label>New</label>
                <model>ba_attributeflag/flag_new</model>
                <disabled>true</disabled>
            </new>
        </ba_attributeflags>
    </global>
    <default>
        <ba_attributeflag>
            <general>
                <module_enabled>0</module_enabled>
                <max_flags>1</max_flags>
            </general>
        </ba_attributeflag>
    </default>
</config>