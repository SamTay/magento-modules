<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!-- Override catalog search filter models -->
    <virtualType name="categoryFilterList" type="Magento\Catalog\Model\Layer\FilterList">
        <arguments>
            <argument name="filters" xsi:type="array">
                <item name="attribute" xsi:type="string">BlueAcorn\LayeredNavigation\Model\Layer\Filter\Attribute</item>
                <item name="price" xsi:type="string">BlueAcorn\LayeredNavigation\Model\Layer\Filter\Price</item>
                <item name="decimal" xsi:type="string">BlueAcorn\LayeredNavigation\Model\Layer\Filter\Decimal</item>
                <item name="category" xsi:type="string">BlueAcorn\LayeredNavigation\Model\Layer\Filter\Category</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="searchFilterList" type="Magento\Catalog\Model\Layer\FilterList">
        <arguments>
            <argument name="filters" xsi:type="array">
                <item name="attribute" xsi:type="string">BlueAcorn\LayeredNavigation\Model\Layer\Filter\Attribute</item>
                <item name="price" xsi:type="string">BlueAcorn\LayeredNavigation\Model\Layer\Filter\Price</item>
                <item name="decimal" xsi:type="string">BlueAcorn\LayeredNavigation\Model\Layer\Filter\Decimal</item>
                <item name="category" xsi:type="string">BlueAcorn\LayeredNavigation\Model\Layer\Filter\Category</item>
            </argument>
        </arguments>
    </virtualType>
    <!-- Initialize mirror with initial category -->
    <type name="Magento\CatalogSearch\Model\Layer\Category\ItemCollectionProvider">
        <plugin name="getCategoryFilterForMirror" type="BlueAcorn\LayeredNavigation\Plugin\MirrorInitializer" />
    </type>
    <!-- Preference for State and injection into Catalog Layer -->
    <preference for="Magento\Catalog\Model\Layer\State" type="BlueAcorn\LayeredNavigation\Model\Layer\State" />
    <virtualType name="BlueAcorn\LayeredNavigation\Model\Layer\StateFactory" type="Magento\Catalog\Model\Layer\StateFactory">
        <arguments>
            <argument name="instanceName" xsi:type="string">BlueAcorn\LayeredNavigation\Model\Layer\State</argument>
        </arguments>
    </virtualType>
    <type name="Magento\Catalog\Model\Layer">
        <arguments>
            <argument name="layerStateFactory" xsi:type="object">BlueAcorn\LayeredNavigation\Model\Layer\StateFactory</argument>
        </arguments>
    </type>
    <!-- Ui component data providers -->
    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="ba_layerednav_dependency_listing_data_source" xsi:type="string">BlueAcorn\LayeredNavigation\Model\ResourceModel\Dependency\Grid\Collection</item>
            </argument>
        </arguments>
    </type>
    <type name="BlueAcorn\LayeredNavigation\Model\ResourceModel\Dependency\Grid\Collection">
        <arguments>
            <argument name="mainTable" xsi:type="string">ba_layerednav_filter_dependency</argument>
            <argument name="eventPrefix" xsi:type="string">ba_layerednav_dependency_grid_collection</argument>
            <argument name="eventObject" xsi:type="string">dependency_grid_collection</argument>
            <argument name="resourceModel" xsi:type="string">BlueAcorn\LayeredNavigation\Model\ResourceModel\Dependency</argument>
        </arguments>
    </type>
    <virtualType name="DependencyGridFilterPool" type="Magento\Framework\View\Element\UiComponent\DataProvider\FilterPool">
        <arguments>
            <argument name="appliers" xsi:type="array">
                <item name="regular" xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\RegularFilter</item>
                <item name="fulltext" xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\FulltextFilter</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="DependencyGridDataProvider" type="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider">
        <arguments>
            <argument name="collection" xsi:type="object" shared="false">BlueAcorn\LayeredNavigation\Model\ResourceModel\Dependency\Collection</argument>
            <argument name="filterPool" xsi:type="object" shared="false">DependencyGridFilterPool</argument>
        </arguments>
    </virtualType>
</config>