<script>
    require([
        'jquery',
        'mage/template',
        'prototype'
    ], function(jQuery, mageTemplate){

        setFilterAttribute = function(urlTemplate, attributeElement) {
            var url;
            if (!jQuery('#edit_form').valid()) {
                return false;
            }
            attributeElement = $F(attributeElement);

            url = mageTemplate(urlTemplate, {
                data: {
                    'attribute_id': attributeElement
                }
            });

            setLocation(url);
        };
    });
</script>
